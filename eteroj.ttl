@prefix owl:			<http://www.w3.org/2002/07/owl#> .
@prefix foaf:			<http://xmlns.com/foaf/0.1/> .
@prefix doap:			<http://usefulinc.com/ns/doap#> .
@prefix rdf:			<http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: 		<http://www.w3.org/2000/01/rdf-schema#> .
@prefix lv2:			<http://lv2plug.in/ns/lv2core#> .
@prefix ui:				<http://lv2plug.in/ns/extensions/ui#> .
@prefix work:			<http://lv2plug.in/ns/ext/worker#> .
@prefix atom:			<http://lv2plug.in/ns/ext/atom#> .
@prefix midi:			<http://lv2plug.in/ns/ext/midi#> .
@prefix time:			<http://lv2plug.in/ns/ext/time#> .
@prefix ui:   		<http://lv2plug.in/ns/extensions/ui#> .
@prefix state:		<http://lv2plug.in/ns/ext/state#> .
@prefix log:			<http://lv2plug.in/ns/ext/log#> .
@prefix patch:		<http://lv2plug.in/ns/ext/patch#> .
@prefix urid:			<http://lv2plug.in/ns/ext/urid#> .
@prefix kx:				<http://kxstudio.sf.net/ns/lv2ext/external-ui#> .

@prefix lic:			<http://opensource.org/licenses/> .
@prefix omk:			<http://open-music-kontrollers.ch/ventosus#> .
@prefix proj:			<http://open-music-kontrollers.ch/lv2/> .
@prefix eteroj:		<http://open-music-kontrollers.ch/lv2/eteroj#> .

# Maintainer
omk:me
	a foaf:Person ;
	foaf:name "Hanspeter Portner" ;
	foaf:mbox <dev@open-music-kontrollers.ch> ;
	foaf:homepage <http://open-music-kontrollers.ch> .

# Project
proj:eteroj
	a doap:Project ;
	doap:maintainer omk:me ;
	doap:name "Eteroj OSC Bundle" .

eteroj:url
	a lv2:Parameter ;
	rdfs:label "Url" ;
	rdfs:range atom:String .

# Eteroj IO UI
eteroj:io_eo
	a ui:EoUI ;
	ui:portNotification [
		ui:plugin eteroj:io ;
		lv2:symbol "notify" ;
		ui:protocol atom:eventTransfer ;
	] ;
	lv2:requiredFeature ui:idleInterface, ui:portMap, urid:map .
eteroj:io_ui
	a ui:UI ;
	ui:portNotification [
		ui:plugin eteroj:io ;
		lv2:symbol "notify" ;
		ui:protocol atom:eventTransfer ;
	] ;
	lv2:requiredFeature ui:idleInterface, ui:portMap, urid:map ;
  lv2:extensionData ui:idleInterface, ui:showInterface .
eteroj:io_x11
	a ui:X11UI ;
	ui:portNotification [
		ui:plugin eteroj:io ;
		lv2:symbol "notify" ;
		ui:protocol atom:eventTransfer ;
	] ;
	lv2:requiredFeature ui:idleInterface, ui:portMap, urid:map ;
	lv2:optionalFeature ui:resize ;
  lv2:extensionData ui:idleInterface .
eteroj:io_kx
	a kx:Widget ;
	ui:portNotification [
		ui:plugin eteroj:io ;
		lv2:symbol "notify" ;
		ui:protocol atom:eventTransfer ;
	] ;
	lv2:requiredFeature kx:Host, ui:portMap, urid:map .

# IO Plugin
eteroj:io
	a lv2:Plugin ,
		lv2:ConverterPlugin ;
	doap:name "Eteroj OSC-IO" ;
	doap:license lic:Artistic-2.0 ;
	lv2:project proj:eteroj ;
	lv2:extensionData work:interface, state:interface ;
	lv2:requiredFeature work:schedule, urid:map ;
	lv2:optionalFeature lv2:isLive, lv2:hardRTCapable, log:log ;

	patch:writable eteroj:url ;
	patch:readable eteroj:url ;

	lv2:port [
		# sink event port
	  a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports midi:MidiEvent ;
		atom:supports time:Position ;
		atom:supports atom:Object ;
		lv2:index 0 ;
		lv2:symbol "osc_in" ;
		lv2:name "OSC Input" ;
		lv2:designation lv2:control ;
	] , [
		# source event port
	  a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports midi:MidiEvent ;
		atom:supports time:Position ;
		atom:supports atom:Object ;
		lv2:index 1 ;
		lv2:symbol "osc_out" ;
		lv2:name "OSC Output" ;
		lv2:designation lv2:control ;
	] , [
		# control output ports
	  a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "state" ;
		lv2:name "State" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 3.0 ;
		lv2:portProperty lv2:integer ;
		lv2:portProperty lv2:enumeration ;
		lv2:scalePoint [ rdfs:label "Disconnected" ;	rdf:value 0 ] ;
		lv2:scalePoint [ rdfs:label "Timedout" ;			rdf:value 1 ] ;
		lv2:scalePoint [ rdfs:label "Ready" ;					rdf:value 2 ] ;
		lv2:scalePoint [ rdfs:label "Connected" ;			rdf:value 3 ] ;
	] , [
		# control input port
	  a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports atom:Object ;
		atom:supports patch:Message ;
		lv2:index 3 ;
		lv2:symbol "control" ;
		lv2:name "Control" ;
	] , [
		# notify output port
	  a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports atom:Object ;
		atom:supports patch:Message ;
		lv2:index 4 ;
		lv2:symbol "notify" ;
		lv2:name "Notify" ;
	] .
