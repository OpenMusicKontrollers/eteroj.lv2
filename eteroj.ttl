# (Un)Pack Plugin
eteroj:pack
	a lv2:Plugin,
		lv2:ConverterPlugin;
	doap:name "Eteroj (Un)Pack " ;
	doap:license lic:Artistic-2.0 ;
	lv2:project proj:eteroj ;
	lv2:extensionData state:interface ;
	lv2:requiredFeature state:loadDefaultState ;
	lv2:optionalFeature lv2:isLive, lv2:hardRTCapable ;

	# input event port
	lv2:port [
	  a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports atom:Object ;
		atom:supports osc:Event ;
		atom:supports midi:MidiEvent ;
		atom:supports patch:Message ;
		lv2:index 0 ;
		lv2:symbol "midi_in" ;
		lv2:name "MIDI Input" ;
		lv2:designation lv2:control ;
	] , [
	# output event port
	  a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports atom:Object ;
		atom:supports osc:Event ;
		atom:supports midi:MidiEvent ;
		atom:supports patch:Message ;
		lv2:index 1 ;
		lv2:symbol "osc_out" ;
		lv2:name "OSC Output" ;
		lv2:designation lv2:control ;
	] ;

	# parameters
	patch:writable
		eteroj:pack_path ;

	# default state
	state:state [
		eteroj:pack_path "/midi" ;
	] .
